<style>
    .sidenav-container {
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        box-shadow: 2px 0 4px rgba(0, 0, 0, .25);
        background-color: #393E46;
        width: 64px;
        height: 100%;
